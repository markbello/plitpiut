generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  createdBy String @db.ObjectId
  text      String
  user      User   @relation(fields: [createdBy], references: [id])
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  posts     Post[]
}
